<section>
  <h1 class="question_title">
    <%= @question.title %>
  </h1>

  <p class="question_description">
    <%= @question.description %>
  </p>

  <ul class="question_stats">
    <li><%= @question.updated_at %></li>
    <li><%= @question.questioner.username %></li>
  </ul>
  <div class=><%= erb :'/votes/_voting' %></div>
  <!-- <ul class="question_tags"></ul> -->

</section>

<section class="answers">
  <div class="answers_header">
    <h3 class="answers_count">
      <%= @question.answers.count %> Answers
    </h3>
    <ul class="answers_list">
      <% if @question.answers %>
        <% @question.answers.each do |answer| %>
          <%= erb :'/votes/_voting' %>
          <li><%= answer.description %><li>
        <% end %>
      <% end %>
    </ul>
  </div>
</section>
